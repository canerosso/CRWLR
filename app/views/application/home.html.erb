<div class="jumbotron text-center">
    <h2>Welcome to CRWLR</h2>
</div>
<div class="container">
    <% if !logged_in? %>
        <p><%= link_to "Login", login_path %></p>
        <br>
        <p><%= link_to "Sign up", new_user_path %></p>
    <% else %>
        <p><%= link_to "My Hosted Crawls", show_user_path(current_user) %></p>
        <p><%= link_to "My Invited Crawls", show_user_invites_path(current_user) %></p>
    <% end %>
</div>