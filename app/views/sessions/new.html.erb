<div class="container">
    <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-4 mx-auto">
    <div class="card card-signin my-5">
    <div class="card-body">
    <div class="form-signin">
      <h2 class="text-center mb-4">Login</h2>
        <%= form_tag sessions_path do %>
          <div class="form-group">
            <%= label_tag "Username", nil, class: "col-form-label"%>
            <%= text_field_tag :username, nil, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= label_tag "Password", nil, class: "col-form-label"%>
            <%= password_field_tag :password, nil, class: "form-control" %>
          </div>
          <%= submit_tag "Sign In", class: "btn btn-primary" %>
        <% end %>
        <br>
        <% if flash[:alert] %>
          <p class='alert alert-danger'><%= flash[:alert] %></p>
        <% end %>
        <p>No account? <%= link_to "Sign up", new_user_path %></p>
    </div>
    </div>
    </div>
    </div>
    </div>
</div>

